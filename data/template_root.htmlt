<!doctype html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="the thermostat for commonwealth">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"/>
  <link rel="stylesheet/css" type="text/css" href="milligram.css">
  <script src="jquery-3.2.1.min.js"></script>
  <script src="app.js"></script>
  <title>Cur: %CURRENT_TEMP%; Tgt: %TARGET_TEMP%</title>
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="column-80" id="target-temp">
          %TARGET_TEMP%
      </div>
      <div class="column-20">
        <div class="row">
          <div class="column">
            <a class="button temp-button" id="target-up" href="#">⇧</a>
          </div>
        </div>
        <div class="row">
          <div class="column">
            <a class="button temp-button" id="target-down" href="#">⇩</a>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="column">
        <table>
          <thead>
            <tr>
              <th>Description</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><b>Current Temp</b></td>
              <td<span id="current-temp" data-cval="%CURRENT_TEMP%">%CURRENT_TEMP%</td>
            </tr>
            <tr>
              <td><b>Target Temp</b></td>
              <td><span id="table-target-temp">%TARGET_TEMP%</span></td>
            </tr>
            <tr>
              <td><b>Sensor Poll Interval</b></td>
              <td><input id="poll-interval" type="text" maxlength="2" value="%POLL_INTERVAL%"/></td>
            </tr>
            <tr>
              <td><b>Furnace Status</b></td>
              <td id="heat-status" data-cval="%HEAT_STATUS%">Furnace is currently %HEAT_STATUS%</td>
            </tr>
            <tr>
              <td colspan="2"><em>%HEAT_RUN%</em></td>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
</body>
